<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/theme"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-24dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="274dp"
        android:layout_height="192dp"
        app:srcCompat="@drawable/imageonline_co_whitebackgroundremoved__9___1_"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="-24dp"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/prenom"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="112dp"
        android:backgroundTint="#A3ABBC"
        android:ems="10"
        android:inputType="text"
        android:hint="Nom ActivitÃ©"
        android:paddingStart="15dp"
        android:paddingBottom="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint=" #A3ABBC"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="221dp" />

    <EditText
        android:id="@+id/budget"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:backgroundTint="#A3ABBC"
        android:ems="10"
        android:hint="Budget"
        android:inputType="numberDecimal"
        android:paddingStart="15dp"
        android:paddingBottom="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint=" #A3ABBC"
        android:textSize="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="290dp" />

    <EditText
        android:id="@+id/Date_Activity"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:backgroundTint="#A3ABBC"
        android:ems="10"
        android:hint="Budget"
        android:inputType="date"
        android:paddingStart="15dp"
        android:paddingBottom="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint=" #A3ABBC"
        android:textSize="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="440dp" />

    <EditText
        android:id="@+id/number_persons"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#A3ABBC"
        android:ems="10"
        android:hint="Nombre de personnes"
        android:inputType="number"
        android:paddingStart="15dp"
        android:paddingBottom="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint=" #A3ABBC"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/budget"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="112dp" />

    <Button
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:text="Retour"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login2"
        app:layout_constraintVertical_bias="0.211"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/login2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="55dp"
        android:text="S'INSCRIRE"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Date_Activity"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>